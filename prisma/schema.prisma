// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"

}


model Mentor{ 
  id Int @id @default(autoincrement())
  name String
  bio String?
  job_title_primary String
  job_title_secondary String?
  preferred_services Services[]  
  school String[]
  school_major String
  degree_type String
  school_year Int?
}

model Mentee{
  id Int @id @default(autoincrement())
  name String
  bio String?
  job_title_primary String
  job_title_secondary String?
  preferred_services Services[] 
  school String[]
  school_major String
  degree_type String
  school_year Int?
}

model University{
  id Int @id @default(autoincrement())
  name String
  city String[]
  province String
  country String
  language String
  category String
  undergrad_count Int
  postgrad_count Int
  total_count Int
  year_founded Int
  size_score Int
}

model Skills{
  id Int @id @default(autoincrement())
  skill String
  skill_type Skill_Type
  family Family
  role String[]
  purpose String[]
}

model Languages {
  id Int @id @default(autoincrement())
  language String
  country String
  continent String
  population Int
}

model Majors { 
  id Int @id @default(autoincrement())
  major String
  faculty String
}

enum Skill_Type {
  SOFT
  HARD
}

enum Family {
  GENERAL
  PROGRAMMING
  MULTIMEDIA
  QUANTITATIVE
}

enum Services {
  CAREER_DEVELOPMENT
  GENERAL
  MOCK_INTERVIEW
  CAREER_PLANNING
  SUCCESS_AT_WORK
  SKILLS_FOR_SUCCESS
  WORK_LIFE_BALANCE
  RESUME_CRITIQUE
}